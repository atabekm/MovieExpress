<div class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <a href="../" class="navbar-brand">Movie Express</a>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse" id="navbar-main">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to('Movies', movies_path) %>
        </li>
        <li>
          <%= link_to('Genres', genres_path) %>
        </li>
        <li>
          <%= form_tag search_path, method: 'get', class: "navbar-form navbar-right" do %>
              <div class="form-group">
                <%= text_field_tag :search, nil, class: "form-control", placeholder: "Search" %>
              </div>
              <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
          <% end %>
        </li>
        <% if user_signed_in? %>
            <li>
              <%= link_to('Add movie', new_movie_path) %>
            </li>
            <li>
              <%= link_to(current_user.email, '') %>
            </li>
            <li>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            </li>
        <% else %>
            <li>
              <%= link_to('Register', signup_path) %>
            </li>
            <li>
              <%= link_to('Login', signin_path) %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>